# vim: filetype=sh

export EDITOR="vim"
export JAVA_HOME=~/opt/jdk
export GEM_HOME=~/gems
export MAILDIR=~/mail
export GOPATH=~/go

export LANG=fr_FR.UTF-8

export OOO_FORCE_DESKTOP=gnome
export NO_AT_BRIDGE=1
if [ "$HOSTNAME" == "mayo" ]; then
    export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"
fi
export GTK_THEME=Flat-Plat
export GTK2_RC_FILES=~/.themes/Flat-Plat/gtk-2.0/gtkrc

add_to_path() {
    local DIR="$1"
    local BEFORE="$2"
    if [[ ":$PATH:" != *":$DIR:"* ]]; then
        if [[ -n "$BEFORE" ]]; then
            PATH=$DIR:$PATH
        else
            PATH=$PATH:$DIR
        fi
    fi
}

add_to_path $JAVA_HOME/bin true

for d in ~/bin $GOPATH/bin ~/.npm-packages/bin/ ~/.cabal/bin ~/.local/bin $GEM_HOME/bin; do
    add_to_path $d
done
