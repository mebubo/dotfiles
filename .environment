# vim: filetype=sh

export EDITOR="vim"
export LANG=fr_FR.UTF-8
export NO_AT_BRIDGE=1
export NIX_PATH=nixpkgs=$HOME/src/nixpkgs
export CUPS_SERVER=print-server:631

add_to_path() {
    local DIR="$1"
    local BEFORE="$2"
    if [[ ":$PATH:" != *":$DIR:"* ]]; then
        if [[ -n "$BEFORE" ]]; then
            PATH=$DIR:$PATH
        else
            PATH=$PATH:$DIR
        fi
    fi
}

for d in ~/bin ~/.npm-packages/bin/ ~/.cabal/bin ~/.local/bin; do
    add_to_path $d
done
