# vim: filetype=sh

export EDITOR="vim"
export JAVA_HOME=~/opt/jdk
export GEM_HOME=~/gems/
export MAILDIR=~/mail
export GOPATH=~/go

export LANG=fr_FR.UTF-8

export OOO_FORCE_DESKTOP=gnome
export NO_AT_BRIDGE=1
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

add_to_path() {
    local DIR="$1"
    local BEFORE="$2"
    if [[ ":$PATH:" != *":$DIR:"* ]]; then
        if [[ -n "$BEFORE" ]]; then
            PATH=$DIR:$PATH
        else
            PATH=$PATH:$DIR
        fi
    fi
}

add_to_path $JAVA_HOME/bin true

for d in ~/bin ~/go/bin ~/.npm-packages/bin/ ~/.cabal/bin; do
    add_to_path $d
done
