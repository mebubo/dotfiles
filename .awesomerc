screen 0
{
general 
{
     resize_hints = false
}
styles
   {
       normal
       {
           #font = "sans 9"
           font = "monospace 9"
           fg = "#FFFFFF"
           bg = "#606060"
           border = "#222222"
       }
       focus
       {
           fg = "#FFFFFF"
           bg = "#3E71AA"
           border = "#D53737"
       }
       urgent
       {
           fg = "#FFFFFF"
           bg = "#D53737"
       }
    }

    tags
    {
        tag 1 { layout = "max" }
        tag 2 { layout = "max" }
        tag 3 { layout = "max" }
        tag 4 { layout = "max" }
        tag 5 { layout = "max" }
        tag 6 { layout = "max" }
        tag 7 { layout = "max" }
        tag 8 { layout = "max" }
        tag 9 { layout = "tile" mwfact = 0.7 }
    }
    layouts
    {
         layout max { image = "/usr/share/awesome/icons/layouts/maxw.png" }
         layout tile { image = "/usr/share/awesome/icons/layouts/tilew.png" }
         #layout tileleft { image = "/usr/share/awesome/icons/layouts/tileleftw.png" }
         #layout tilebottom { image = "/usr/share/awesome/icons/layouts/tilebottomw.png" }
         #layout tiletop { image = "/usr/share/awesome/icons/layouts/tiletopw.png" }
         #layout spiral { image = "/usr/share/awesome/icons/layouts/spiralw.png" }
         #layout dwindle { image = "/usr/share/awesome/icons/layouts/dwindlew.png" }
         #layout floating { image = "/usr/share/awesome/icons/layouts/floatingw.png" }
    }
    statusbar mystatusbar
    {
        position = "top"
        height = 20

        taglist mytaglist
        {
            mouse
            {
                button = "1"
                command = "tag_view"
            }
            mouse
            {
                button = "1"
                modkey = {"Mod3"}
                command = "client_tag"
            }
            mouse
            {
                button = "3"
                command = "tag_toggleview"
            }
            mouse
            {
                button = "3"
                modkey = {"Mod3"}
                command = "client_toggletag"
            }
            mouse
            {
                button = "4"
                command = "tag_viewnext"
            }
            mouse
            {
                button = "5"
                command = "tag_viewprev"
            }
        }
        layoutinfo mylayoutinfo
        {
            mouse
            {
                button = "1"
                command = "tag_setlayout"
                arg = "+1"
            }
            mouse
            {
                button = "4"
                command = "tag_setlayout"
                arg = "+1"
            }
            mouse
            {
                button = "3"
                command = "tag_setlayout"
                arg = "-1"
            }
            mouse
            {
                button = "5"
                command = "tag_setlayout"
                arg = "-1"
            }
        }
        tasklist mytasklist
        {
            mouse
            {
                button = "4"
                command = "client_focusnext"
            }
            mouse
            {
                button = "5"
                command = "client_focusprev"
            }
            mouse
            {
                modkey = {"Mod3"}
                button = "4"
                command = "client_swapnext"
            }
            mouse
            {
                modkey = {"Mod3"}
                button = "5"
                command = "client_swapprev"
            }
        }
#         iconbox logo
#         {
#             image = "/usr/share/awesome/icons/awesome16.png"
#             mouse
#             {
#                 button = "1"
#                 command = "spawn"
#                 arg = "exec x-terminal-emulator -e man awesome"
#             }
#         }
         textbox clock 
         {
                text_align = "right"
                align = "right" 
                width = "400"
         }
    }
}

rules
{
    rule { name = "Gimp" float = true }
    rule { name = "MPlayer" float = true }
    rule { name = "Acroread" float = true }
    rule { name = "pinentry" float = true }
    rule { name = "Firefox" tags = "1" }
}

mouse
{
    root
    {
        button = "3"
        command = "spawn"
        arg = "exec x-terminal-emulator"
    }
    root
    {
        button = "4"
        command = "tag_viewnext"
    }
    root
    {
        button = "5"
        command = "tag_viewprev"
    }
    client
    {
        modkey = {"Mod3"}
        button = "1"
        command = "client_movemouse"
    }
    client
    {
        modkey = {"Mod3"}
        button = "2"
        command = "client_zoom"
    }
    client
    {
        modkey = {"Mod3"}
        button = "3"
        command = "client_resizemouse"
    }
    titlebar
    {
        button = "1"
        command = "client_movemouse"
    }
    titlebar
    {
        button = "3"
        command = "client_resizemouse"
    }
}

keys
{
    key
    {
        modkey = {"Mod3"}
        key = "F1"
        command = "spawn"
        arg = "for i in /usr/share/man/man?;do ls $i; done | cut -d. -f1 | awesome-menu -e 'x-terminal-emulator -e man ' 'See manual page for:'"
    }
    key
    {
        modkey = {"Mod3"}
        key = "F2"
        command = "spawn"
        arg = "ls /usr/bin | awesome-menu -e 'exec ' Execute:"
    }
    key
    {
        modkey = {"Mod3"}
        key = "p"
        command = "spawn"
        arg = "exe=`dmenu_path | dmenu -fn terminus-iso8859-1-14` && eval \"exec $exe\""
    }
    key
    {
        modkey = {"Mod3"}
        key = "F3"
        command = "spawn"
        arg = "cut -d' ' -f1 ~/.ssh/known_hosts | cut -d, -f1 | awesome-menu -e 'x-terminal-emulator -e ssh ' 'ssh to:'"
    }
    key
    {
        modkey = {"Mod3"}
        key = "t"
        command = "spawn"
        arg = "exec x-terminal-emulator"
    }
    key
    {
        modkey = {"Mod3"}
        key = "v"
        command = "tag_setlayout"
        arg = "+1"
    }
    key
    {
        modkey = {"Mod3", "Shift"}
        key = "v"
        command = "tag_setlayout"
        arg = "-1"
    }
    key
    {
        modkey = {"Mod3"}
        key = "b"
        command = "statusbar_toggle"
    }
    key
    {
        modkey = {"Mod3"}
        key = "j"
        command = "client_focusnext"
    }
    key
    {
        modkey = {"Mod3"}
        key = "k"
        command = "client_focusprev"
    }
    key
    {
        modkey = {"Mod3"}
        key = "Tab"
        command = "focus_history"
        arg = "-1"
    }
    key
    {
        modkey = {"Mod3", "Shift"}
        key = "j"
        command = "client_swapnext"
    }
    key
    {
        modkey = {"Mod3", "Shift"}
        key = "k"
        command = "client_swapprev"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "j"
        command = "screen_focus"
        arg = "+1"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "k"
        command = "screen_focus"
        arg = "-1"
    }
    key
    {
        modkey = {"Mod3"}
        key = "h"
        command = "tag_setmwfact"
        arg = "-0.05"
    }
    key
    {
        modkey = {"Mod3"}
        key = "l"
        command = "tag_setmwfact"
        arg = "+0.05"
    }
    key
    {
        modkey = {"Mod3", "Shift"}
        key = "h"
        command = "tag_setnmaster"
        arg = "+1"
    }
    key
    {
        modkey = {"Mod3", "Shift"}
        key = "l"
        command = "tag_setnmaster"
        arg = "-1"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "h"
        command = "tag_setncol"
        arg = "+1"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "l"
        command = "tag_setncol"
        arg = "-1"
    }
    key
    {
        modkey = {"Mod3"}
        key = "Escape"
        command = "tag_prev_selected"
    }
    key
    {
        modkey = {"Mod3"}
        key = "Left"
        command = "tag_viewprev"
    }
    key
    {
        modkey = {"Mod3"}
        key = "Right"
        command = "tag_viewnext"
    }
    key
    {
        modkey = {"Mod3"}
        key = "m"
        command = "client_togglemax"
    }
    key
    {
        modkey = {"Mod3"}
        key = "Return"
        command = "client_zoom"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "space"
        command = "client_togglefloating"
    }
    key
    {
        modkey = {"Mod3"}
        key = "s"
        command = "client_togglescratch"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "s"
        command = "client_setscratch"
    }
    key
    {
        modkey = {"Mod3"}
        key = "c"
        command = "client_kill"
    }
    key
    {
        modkey = {"Mod3", "Shift"}
        key = "q"
        command = "quit"
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "r"
        command = "restart"
    }
    key
    {
       modkey = {"Mod3"}
       key = "0"
       command = "tag_view"
    }
    keylist
    {
        modkey = {"Mod3"}
        command = "tag_view"
        keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
        arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    }
    key
    {
        modkey = {"Mod3", "Control"}
        key = "0"
        command = "tag_toggleview"
    }
    keylist
    {
        modkey = {"Mod3", "Control"}
        command = "tag_toggleview"
        keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
        arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    }

    key
    {
        modkey = {"Mod3", "Shift"}
        key = "0"
        command = "client_tag"
    }
    keylist
    {
        modkey = {"Mod3", "Shift"}
        command = "client_tag"
        keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
        arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    }

    key
    {
        modkey = {"Mod3", "Shift", "Control"}
        key = "0"
        command = "client_toggletag"
    }
    keylist
    {
        modkey = {"Mod3", "Shift", "Control"}
        command = "client_toggletag"
        keylist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
        arglist = { 1, 2, 3, 4, 5, 6, 7, 8, 9 }
    }
}
