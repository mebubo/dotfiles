{
    "bookmarks.saveBookmarksInProject": true,
    "chat.editor.fontSize": 13,
    "debug.console.fontSize": 13,
    "debugpy.debugJustMyCode": false,
    "diffEditor.experimental.showMoves": true,
    "editor.cursorBlinking": "solid",
    "editor.fontFamily": "'CaskaydiaMono Nerd Font', 'Monaspace Neon', Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'calt', 'dlig'",
    "editor.fontSize": 13,
    "editor.fontWeight": 500,
    "editor.formatOnSave": false,
    "editor.inlineSuggest.enabled": true,
    "editor.lineHeight": 15,
    "editor.minimap.enabled": false,
    "editor.stickyScroll.enabled": true,
    "editor.wordBasedSuggestions": "currentDocument",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.watcherExclude": {
        "**/.bloop": true,
        "**/.metals": true,
        "**/.ammonite": true
    },
    "git.ignoreLimitWarning": true,
    "git.openRepositoryInParentFolders": "never",
    "github.copilot.chat.search.semanticTextResults": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": true
    },
    "interactiveWindow.executeWithShiftEnter": true,
    "jupyter.askForKernelRestart": false,
    "jupyter.debugJustMyCode": false,
    "jupyter.interactiveWindow.creationMode": "perFile",
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "notebook.output.textLineLimit": 100,
    "notebook.stickyScroll.enabled": true,
    "python.REPL.sendToNativeREPL": true,
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "standard",
    "search.useGlobalIgnoreFiles": true,
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.commandsToSkipShell": [
        "-workbench.action.quickOpen"
    ],
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.stickyScroll.enabled": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "update.mode": "manual",
    "vim.easymotion": true,
    "vim.handleKeys": {
        "<C-b>": false,
        "<C-e>": false,
        "<C-k>": false,
        "<C-p>": false,
        "<C-t>": false,
        "<C-w>": false,
    },
    "vim.hlsearch": true,
    "vim.leader": "<Space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ "<C-S-h>" ], "commands": [ ":bprevious" ] },
        { "before": [ "<C-S-l>" ], "commands": [ ":bnext" ] },
        { "before": [ "]", "d" ], "commands": [ "editor.action.mark.next" ] },
        { "before": [ "[", "d" ], "commands": [ "editor.action.mark.prev" ] },
        { "before": [ "leader", "n", "e" ], "commands": [ "workbench.explorer.fileView.focus" ] },
    ],
    "vim.sneak": true,
    "vim.surround": true,
    "window.customTitleBarVisibility": "auto",
    "window.density.editorTabHeight": "compact",
    "window.restoreWindows": "none",
    "window.titleBarStyle": "custom",
    "workbench.activityBar.location": "top",
    "workbench.colorTheme": "Default Light Modern",
    "workbench.editor.enablePreview": true,
    "workbench.editor.pinnedTabsOnSeparateRow": true,
    "workbench.editor.showTabs": "multiple",
    "workbench.editor.tabActionLocation": "right",
    "workbench.externalBrowser": "/home/dev/browser.sh",
    "workbench.settings.editor": "json",
    "workbench.tree.indent": 24,
    "github.copilot.chat.codesearch.enabled": true,
    "github.copilot.chat.newWorkspaceCreation.enabled": true,
    "remote.defaultExtensionsIfInstalledLocally": [
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "GitHub.vscode-pull-request-github"
    ],
    "github.copilot.nextEditSuggestions.enabled": true,
}
