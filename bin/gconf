#!/bin/sh

DOTFILES_DIR=$(dirname $(cd $(dirname $0); pwd))
DUMP_FILE=$DOTFILES_DIR/.gconf.xml

KEYS=/apps/gnome-terminal

dump () {
    gconftool-2 --dump $KEYS > $DUMP_FILE
}

restore () {
    gconftool-2 --load $DUMP_FILE
}

case "$1" in
    dump|restore)
        $1
        ;;
    *)
        echo "Usage: $0 dump|restore"
        exit 1
        ;;
esac
